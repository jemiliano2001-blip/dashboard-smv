{
  "name": "tv-dashboard-next",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:local": "cross-env HOST=local vite",
    "dev:ip": "cross-env HOST=network vite",
    "build": "vite build",
    "preview": "vite preview",
    "preview:local": "cross-env HOST=local vite preview",
    "preview:ip": "cross-env HOST=network vite preview",
    "serve:prod": "vite preview --host --port 3000",
    "serve:prod:https": "serve -s dist -l 3000 --ssl-cert certs/localhost.crt --ssl-key certs/localhost.key",
    "generate-cert": "node scripts/generate-cert.js",
    "deploy:storage": "node scripts/deploy-storage.js",
    "upload:storage": "npm run build && node scripts/deploy-storage.js",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.typecheck.json",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint . --fix",
    "validate": "npm run typecheck && npm run lint && npm run test:ci",
    "prepare": "husky",
    "update-types": "node scripts/update-supabase-types.js"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --max-warnings 0"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-table": "^8.21.3",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.5",
    "lucide-react": "^0.363.0",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.3",
    "react-window": "^2.2.5",
    "recharts": "^3.6.0",
    "xlsx-js-style": "^1.2.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/react-window": "^1.8.8",
    "@eslint/js": "^8.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.32",
    "prettier": "^3.4.2",
    "serve": "^14.2.1",
    "tailwindcss": "^3.4.0",
    "terser": "^5.46.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.18.0",
    "vite": "^7.3.1",
    "vite-plugin-node-polyfills": "^0.2.0",
    "vitest": "^4.0.17"
  }
}
